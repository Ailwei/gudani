generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id           String         @id @default(uuid())
  firstName    String
  lastName     String
  email        String         @unique
  password     String
  created      DateTime       @default(now())
  userRole     usersRole      @default(USER)
  activities   Activity[]
  ChatHistory  Chat[]
  FlashcardSet FlashcardSet[]
  NoteSummary  NoteSummary[]
  Quiz         Quiz[]
}

model Activity {
  id     String   @id @default(uuid())
  userId String
  type   String
  detail String
  date   DateTime @default(now())
  user   user     @relation(fields: [userId], references: [id])
}

model FlashcardSet {
  id      String      @id @default(uuid())
  userId  String
  grade   String
  subject String
  topic   String
  created DateTime    @default(now())
  cards   Flashcard[]
  user    user        @relation(fields: [userId], references: [id])
}

model Flashcard {
  id    String       @id @default(uuid())
  setId String
  front String
  back  String
  set   FlashcardSet @relation(fields: [setId], references: [id])
}

model Quiz {
  id        String     @id @default(uuid())
  userId    String
  grade     String
  subject   String
  topic     String
  created   DateTime   @default(now())
  questions Question[]
  user      user       @relation(fields: [userId], references: [id])
}

model Question {
  id       String @id @default(uuid())
  quizId   String
  question String
  correct  String
  options  Json
  quiz     Quiz   @relation(fields: [quizId], references: [id])
}

model NoteSummary {
  id      String   @id @default(uuid())
  userId  String
  grade   String
  subject String
  notes   String
  summary String
  topic   String @default("untitled")
  created DateTime @default(now())
  user    user     @relation(fields: [userId], references: [id])
}

model Chat {
  id       String    @id @default(uuid())
  userId   String
  grade    String
  subject  String
  title    String
  created  DateTime  @default(now())
  updated  DateTime  @updatedAt
  user     user      @relation(fields: [userId], references: [id])
  messages Message[]
}

model Message {
  id      String   @id @default(uuid())
  chatId  String
  role    String
  content String
  created DateTime @default(now())
  chat    Chat     @relation(fields: [chatId], references: [id])
}

model SyllabusChunk {
  id       String   @id @default(uuid())
  grade    String
  subject  String
  chunk    String
  fileData Bytes?
  fileName String?
  topic    String
  created  DateTime @default(now())
}

enum usersRole {
  ADMIN
  USER
}
