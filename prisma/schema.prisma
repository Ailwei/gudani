generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  id               String         @id @default(uuid())
  firstName        String
  lastName         String
  email            String         @unique
  password         String
  created          DateTime       @default(now())
  userRole         usersRole      @default(USER)
  lastReset        DateTime?
  tokensUsed       Int            @default(0)
  stripeCustomerId String?        @unique
  activities       Activity[]
  ChatHistory      Chat[]
  FlashcardSet     FlashcardSet[]
  NoteSummary      NoteSummary[]
  Quiz             Quiz[]
  Subscription     Subscription[]
  TokenUsage       TokenUsage[]
}

model TokenUsage {
  id        String   @id @default(uuid())
  userId    String
  tokens    Int
  createdAt DateTime @default(now())
  user      user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PlanConfig {
  id            String         @id @default(uuid())
  type          PlanType       @unique
  dailyLimit    Int?
  monthlyLimit  Int?
  price         Int?
  stripePriceId String?
  Subscription  Subscription[]
}

model Activity {
  id     String   @id @default(uuid())
  userId String
  type   String
  detail String
  date   DateTime @default(now())
  user   user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model FlashcardSet {
  id      String      @id @default(uuid())
  userId  String
  grade   String
  subject String
  topic   String
  created DateTime    @default(now())
  cards   Flashcard[]
  user    user        @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Flashcard {
  id    String       @id @default(uuid())
  setId String
  front String
  back  String
  set   FlashcardSet @relation(fields: [setId], references: [id], onDelete: Cascade)
}

model Quiz {
  id        String     @id @default(uuid())
  userId    String
  grade     String
  subject   String
  topic     String
  created   DateTime   @default(now())
  questions Question[]
  user      user       @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Question {
  id       String @id @default(uuid())
  quizId   String
  question String
  correct  String
  options  Json
  quiz     Quiz   @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

model NoteSummary {
  id      String   @id @default(uuid())
  userId  String
  grade   String
  subject String
  notes   String
  summary String
  created DateTime @default(now())
  topic   String   @default("untitled")
  user    user     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Chat {
  id       String    @id @default(uuid())
  userId   String
  grade    String
  subject  String
  title    String
  created  DateTime  @default(now())
  updated  DateTime  @updatedAt
  user     user      @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages Message[]
}

model Message {
  id      String   @id @default(uuid())
  chatId  String
  role    String
  content String
  created DateTime @default(now())
  chat    Chat     @relation(fields: [chatId], references: [id], onDelete: Cascade)
}

model SyllabusChunk {
  id       String   @id @default(uuid())
  grade    String
  subject  String
  chunk    String
  fileData Bytes?
  fileName String?
  topic    String
  created  DateTime @default(now())
  order   Int
}

model Subscription {
  id                   String             @id @default(uuid())
  userId               String
  planId               String
  startDate            DateTime           @default(now())
  endDate              DateTime?
  status               SubscriptionStatus @default(ACTIVE)
  stripeSubscriptionId String?            @unique
  cancelAtPeriodEnd    Boolean            @default(false)
  cancellationDate     DateTime?
  pastDueAmount        Float?             @default(0)
  pastDueCurrency      String?
  paymentStatus        PaymentStatus      @default(PENDING)
  plan                 PlanConfig         @relation(fields: [planId], references: [id])
  user                 user               @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum SubscriptionStatus {
  ACTIVE
  EXPIRED
}

enum usersRole {
  ADMIN
  USER
}

enum PlanType {
  FREE
  STANDARD
  PREMIUM
}

enum PaymentStatus {
  PAID
  PAST_DUE
  FAILED
  PENDING
}
